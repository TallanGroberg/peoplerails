<%= form_with(model: @person, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, required: true, palceholders: "firstname", autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, required: true, palceholders: "last name", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :avatar %>
    <%= f.text_field :avatar, required: true, palceholders: "avatar", autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone, required: false, palceholders: "phone", autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, required: true, palceholders: "email", autofocus: true %>
  </div>
  <br>
  <%= f.submit nil, class: "ui button green" %>
  <br>
  <% end  %>
  <br>
