<div class="ui card">
  <div class="image">
    <img src="https://robohash.org/<%= @person.avatar %>?set=set4" />
  </div>
  <div class="content">
    <p class="header">
      <%= @person.first_name %> <%= @person.last_name %>
    </p>
    <div class="meta">
      <span class="date"> <%= @person.phone %></span>
    </div>
    <div class="discription">
      <%= @person.email %>
    </div>
    <div class="extra content">
      <%= link_to "edit", edit_person_path(@person), class: "ui button blue" %> |
      <%= link_to "back", people_path, class: "ui button" %>
    </div>
  </div>

</div>
